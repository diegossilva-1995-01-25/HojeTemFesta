	@Override
	public void painelParaMembro() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void membroParaPainel() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void limparTela() {
		// TODO Auto-generated method stub
		txtIdMembro.setText("");
		txtNome.setText("");
		txtApelido.setText("");
		txtSobrenomes.setText("");
		txtCargo.setText("");
		txtDia.setText("");
		txtMes.setText("");
		txtAno.setText("");
